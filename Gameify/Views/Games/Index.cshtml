@model IEnumerable<Gamey.Models.Game>

@{
    ViewData["Title"] = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Games</h2>

<p>
    @Html.ActionLink("New game", "New", "Games", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Producer</th>
        <th>Release Date</th>
        <th>Genre</th>
        <th>Pegi Age Restriction</th>
        <th>Pegi Content Flag</th>
        <th>Description</th>
        <th>Cost</th>
        <th>Number Available</th>
        <th>Rating</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Name</td>
                <td>@game.Producer</td>
                <td>@game.ReleaseDate.ToShortDateString()</td>
                <td>@game.Genre.Name</td>
                <td>@game.PegiAge.Age</td>
                <td>@game.PegiContent.Name</td>
                <td>@game.Description</td>
                <td>@game.Cost</td>
                <td>@game.NumberAvailable</td>
                <td>@game.Rating</td>
            </tr>
        }
    </tbody>
</table>